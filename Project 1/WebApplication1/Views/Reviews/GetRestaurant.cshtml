@model IEnumerable<ClassLibrary1.ReviewClass>

@{
    ViewBag.Title = "GetRestaurant";
}

<h2>Reviews for Desired Restaurant</h2>

<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Restaurant)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Review)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserID)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Restaurant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Review)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserID)
            </td>

        </tr>
    }

</table>

<footer> @Html.ActionLink(linkText: "Back to List", actionName:"Index", controllerName: "Restaurants")</footer>
